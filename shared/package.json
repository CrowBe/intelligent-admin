{
  "name": "intelligent-admin-shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for intelligent assistant",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:performance": "vitest run --testNamePattern='Performance Tests'",
    "test:compatibility": "vitest run --testNamePattern='Cross-Platform Compatibility Tests'",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
