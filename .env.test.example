# Test Environment Configuration

# Database Configuration (use separate test database)
DATABASE_URL="postgresql://dev_user:dev_password@localhost:5432/intelligent_admin_test"

# Application Configuration
NODE_ENV=test
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5174

# JWT Configuration (shorter expiry for tests)
JWT_SECRET=test-jwt-secret-for-testing-only-min-32-chars-long
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-token-secret-for-testing-only
REFRESH_TOKEN_EXPIRES_IN=24h

# Mock API Keys (don't use real keys in tests)
OPENAI_API_KEY=test-openai-key
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/auth/google/callback

# File Upload Configuration
MAX_FILE_SIZE=1048576
UPLOAD_DIR=./test-uploads
ALLOWED_FILE_TYPES=pdf,txt

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Rate Limiting (more permissive for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (simpler for tests)
BCRYPT_ROUNDS=4
ENCRYPTION_KEY=test-encryption-key-32chars-long

# Development Flags
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_INTEGRATIONS=true
SKIP_AUTH_IN_DEV=false