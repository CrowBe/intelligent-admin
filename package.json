{
  "name": "intelligent-admin",
  "version": "0.1.0",
  "description": "AI-powered administrative assistant for Australian trade businesses",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently --names \"backend,frontend\" --prefix-colors \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:backend": "vitest run --project backend",
    "test:frontend": "vitest run --project frontend", 
    "test:shared": "vitest run --project shared",
    "test:coverage": "vitest run --coverage",
    "test:legacy:backend": "cd backend && npm run test",
    "test:legacy:frontend": "cd frontend && npm run test:once",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:shared",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix && npm run lint:shared -- --fix",
    "type-check": "npm run type-check:backend && npm run type-check:frontend && npm run type-check:shared",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:shared": "cd shared && npm run type-check",
    "clean": "rimraf frontend/dist backend/dist shared/dist frontend/node_modules backend/node_modules shared/node_modules node_modules",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../shared && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "db:studio": "cd backend && npm run db:studio",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:reset": "cd backend && npm run db:reset",
    "setup": "npm run install:all && cd backend && npm run db:generate && npm run db:migrate"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.0",
    "depcheck": "^1.4.7",
    "npm-check-updates": "^18.0.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/intelligent-admin.git"
  },
  "keywords": [
    "ai",
    "assistant",
    "trade-business",
    "mcp",
    "chat-interface",
    "australia"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0"
  }
}
