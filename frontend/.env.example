# Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_VERSION=v1

# WebSocket/SSE Configuration
VITE_WEBSOCKET_URL=ws://localhost:3000
VITE_SSE_URL=http://localhost:3000

# Application Configuration
VITE_APP_NAME="Intelligent Assistant"
VITE_APP_VERSION=0.1.0
VITE_APP_DESCRIPTION="AI-powered administrative assistant for trade businesses"

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_ANALYTICS=false

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id_here
VITE_FIREBASE_VAPID_KEY=your_web_push_certificates_key_pair

# Third-party Services
VITE_SENTRY_DSN=your-sentry-dsn  
VITE_GOOGLE_ANALYTICS_ID=your-ga-id

# File Upload Configuration
VITE_MAX_FILE_UPLOAD_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Ollama Configuration (Local LLM)
VITE_OLLAMA_BASE_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama2
VITE_OLLAMA_TIMEOUT=30000
VITE_OLLAMA_TEMPERATURE=0.7
# Note: The system prompt below tells the LLM about the Intelligent Admin application context
# You can customize this for your specific business needs
VITE_OLLAMA_SYSTEM_PROMPT="You are the AI assistant for Intelligent Admin. The user is already in the app talking to you. Guide them to use Intelligent Admin's built-in features: Gmail integration, document management, compliance tracking, quotes/invoices, and job scheduling. Focus on Australian trade business needs."
