FROM node:22-alpine

# Set working directory
WORKDIR /app

# Install system dependencies including OpenSSL 3
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    sqlite \
    openssl \
    openssl-dev

# Set OpenSSL environment variable for Prisma
ENV OPENSSL_ROOT_DIR=/usr

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]